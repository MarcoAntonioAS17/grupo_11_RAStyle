<div class="seccion_tallas_colores">
    <p>Tallas disponibles</p>
    <div class="list_tallas">
        <div >
            <% [
                { s: "XXL", l: "Extra Extra Grande", c:1 },
                { s: "XL", l: "Extra Grande", c:2 },
                { s: "L", l: "Grande", c:3 }
            ].forEach(talla => { %>
                <div>
                    <input type="checkbox" name="talla" 
                        id="item_talla_<%=talla.s%>" value= "<%= talla.c%>"
                        <%= locals.tallas && tallas.findIndex(tallaFind => tallaFind === talla.c) != -1 ? "checked" : null %>
                    />
                    <label for="item_talla_<%=talla.s %>"> <%=talla.l%> (<%=talla.s%>) </label>
                </div>
            <% }); %>
        </div>
        <div >
            <% [
                { s: "M", l: "Mediana", c:4 },
                { s: "S", l: "Pequeña", c:5 },
                { s: "XS", l: "Extra Pequeña", c:6}
            ].forEach(talla => { %>
                <div>
                    <input type="checkbox" name="talla" 
                        id="item_talla_<%= talla.s %>" value= "<%= talla.c %>"
                        <%= locals.tallas && tallas.findIndex(tallaFind => tallaFind === talla.c) != -1 ? "checked" : null %>
                    />
                    <label for="item_talla_<%= talla.s %>"> <%= talla.l %> (<%= talla.s %>) </label>
                </div>
            <% }); %>
        </div>
    </div>
    <% if (locals.errors && errors.talla) { %>
        <label class="feedback"><%= errors.talla.msg %></label>
    <% } %>
</div>
<div class="seccion_tallas_colores">
    <p>Colores disponibles</p>
    <div class="list_colores">
        <div >
            <% [
                { es: 'Blanco', en: 'white', c:1},
                { es: "Rojo", en: "red", c:2 },
                { es: "Azul", en: "blue", c:3}
            ].forEach(color => { %>
            <div>
                <label for="item_color_<%= color.es %>">
                    <input type="checkbox" name="color" 
                        id="item_color_<%= color.es %>" value= "<%= color.c %>"
                        <%= locals.colores && colores.findIndex(colorFind => colorFind === color.c) != -1 ? "checked" : null %>
                    />
                    <div class="circulo_color" style="background-color: <%= color.en %>"></div>    
                    <%= color.es %>
