            <div>
                <label for="item_color_<%= color.es %>">
                    <input type="checkbox" name="color" 
                    id="item_color_<%= color.es %>" value= "<%= color.c %>"
                        <%= locals.colores && colores.findIndex(colorFind => colorFind === color.c) != -1 ? "checked" : null %>
                    />
                    <div class="circulo_color" style="background-color: <%= color.en %>"></div>    
