<header>
    <div class="header-contenedor">
        <a href="/"><div class="contenedor-logo">
            <label for="show-nav">
                <span id="span_show" class="material-icons-outlined">menu</span>
            </label>
            <img id="logo-header" src="/images/Logo_sin_fondo.png" alt="logo">
        </div></a>
        
        <input type="checkbox" id="show-nav" hidden>
        <div class="contenedor_menu">
            <ul class="navbar_menu">
                <li><a href="/products">Hot Sale</a></li>
                <li><a href="/products">Hombres</a></li>
                <li><a href="/products">Mujeres</a></li>
                <li><a href="/products">Promociones</a></li>
                <% if (locals.logeado && logeado.logeado && logeado.role=='admin') { %>
                <li><a href="/products/create">Crear Producto</a></li>
                <% } %>
            </ul>
            <label for="show-nav" class="close_button">
                <span id="span_hide" class="material-icons-outlined">close</span>
            </label>
        </div>

        <div class="contenedor-buttons">
            <% if (locals.logeado && logeado.logeado) { %>
                <p id="mensaje-usuario"> Hola <%= logeado.userNombre %>. Bienvenido!</p>
            <% } %>
            <a href="/products/busqueda"><span class="material-icons">search</span></a>
            <% if (locals.logeado && !logeado.logeado) { %>
                <a href="/users/login"><span class="material-icons">account_circle</span></a>
            <% } else { %>
                <a href="/users/info"><span class="material-icons">account_circle</span></a>
                <a href="/users/logout"><span class="material-icons-outlined">logout</span></a>
            <% } %>
            <a href="#"><span class="material-icons-outlined">favorite_border</span></a>
            <a href="/carrito"><span class="material-icons-outlined">shopping_bag</span></a>
        </div>
        
    </div>
    
</header>