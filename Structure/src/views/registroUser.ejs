<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link href="/css/userPerfilStyles.css" rel="stylesheet" type="text/css">
    <title>Perfil</title>
</head>
<body>
    <!-- Header -->
    <%- include('./partials/header') %>

    <!-- Body -->
    <main>
        <div class="contenedor_main">
            <div class="ruta">
                <span class="material-icons-outlined">home</span>
                <span class="material-icons-outlined">navigate_next</span>
                Perfil
                <span class="material-icons-outlined">navigate_next</span>
                Informaci칩n
            </div>
            <div id="div-info">
                <div id="enlaces">
                    <h1>Informaci칩n</h1>
                    <a href="/users/info">Datos generales</a>
                    <a href="/users/info/domicilio">Direcci칩n</a>
                    <a href="#">Compras</a>
                </div>
                <div id="div-formulario">
                    <h1>Datos de la cuenta</h1>
                    <form method="POST" action="/users/info?_method=PUT" enctype="multipart/form-data">
                        <div id="contenedor_inputs">
                            <div id="div-perfil">
                                <div id="perfil-picture">
                                    <img src="<%= usuario.image ? usuario.image : '/images/profile.png' %>" alt="foto-perfil">
                                    <input type="file" name="image" id="">
                                </div>
                                <div id="div-input-nombre">
                                    <div class="div-nombre">
                                        <label for="nombre">Nombre *</label>
                                        <input type="text" name="firstName" id="nombre" required value="<%=usuario.firstName%>">
                                        <% if (locals.errors && errors.firstName) {%>
                                            <p class="feedback"><%=errors.firstName.msg%></p>
                                        <% } %>
                                    </div>
                                    <div class="div-nombre">
                                        <label for="apellidos">Apellidos *</label>
                                        <input type="text" name="lastName" id="apellidos" required value="<%=usuario.lastName%>">
                                        <% if (locals.errors && errors.lastName) {%>
                                            <p class="feedback"><%=errors.lastName.msg%></p>
                                        <% } %>
                                    </div>
                                    <div class="div-nombre">
                                        <label for="telefono">Telefono</label>
                                        <input type="text" name="tel" id="telefono" value="<%=usuario.tel%>">
                                        <% if (locals.errors && errors.tel) {%>
                                            <p class="feedback"><%=errors.tel.msg%></p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            <div id="div-email">
                                <div class="div-input">
                                    <label for="email">Correo *</label>
                                    <input type="email" name="email" id="email" required value="<%=usuario.email%>">
                                    <% if (locals.errors && errors.email) {%>
                                        <p class="feedback"><%=errors.email.msg%></p>
                                    <% } %>
                                </div>
                                <div class="div-input">
                                    <label for="password">Contrase침a</label>
                                    <input type="password" name="password" id="password" required>
                                    <% if (locals.errors && errors.password) {%>
                                        <p class="feedback"><%=errors.password.msg%></p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div id="div-button">
                            <button type="submit">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <!-- Footer -->
    <%- include('./partials/footer') %>
</body>
</html>