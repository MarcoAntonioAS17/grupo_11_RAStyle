<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <link href="/css/detalleProductoStyles.css" rel="stylesheet" type="text/css">
    <title>Detalles de producto</title>
</head>
<body>
    <!-- Header -->
    <%- include('./partials/header') %>

    <!-- Body -->
    <main>
        <div class="contenedor_main">
        <div class="ruta">
            <span class="material-icons-outlined">home</span>
            <span class="material-icons-outlined">navigate_next</span>
            Detalle de producto
            <span class="material-icons-outlined">navigate_next</span>
            <%= producto.Nombre%>
        </div>
        <div class="contenedor_producto">
            <div class="carrusel_imagenes">
                <span class="material-icons-outlined">expand_less</span>
                <% if(producto.fotosDelProducto) { %>
                    <% for (let i=0; i<producto.fotosDelProducto.length; i++) { %>
                        <% if(producto.fotosDelProducto[i]) { %>
                            <img class="image_carrusel" src="<%= producto.fotosDelProducto[i].path %>" alt="sudadera">
                        <% } %>
                    <% } %>
                <% } %>
                <span class="material-icons-outlined">expand_more</span>
            </div>
            <div class="carrusel">
                <% if(producto.fotosDelProducto[0]) { %>
                    <img class="image_carrusel" src="<%= producto.fotosDelProducto[0].path %>" alt="sudadera">
                <% } %>
            </div>
            <div class="contenedor_datos">
                <div class="contenedor_titulo">
                    <h3 class="item_nombre"><%= producto.Nombre%></h3>
                    <span id="icon_encanta" class="material-icons-outlined">favorite_border</span>
                    <% if (producto.enOferta == false) { %>
                        <p class="item_precio">MXN $<%=producto.precio%></p>
                    <% } else { %>
                        <p class="item_precio">MXN $<%=producto.precioOferta%></p>
                    <% } %>
                    
                </div>
                <div class="contenedor_color">
                    <p>Selecciona color </p>
                    <div>
                        <% if(locals.color) { %>
                            <% for (let i=0; i<color.length;i++) { %>
                                <button name="color" class="item_color" style=<%="background-color:"+color[i].color.Nombre%>>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                <div class="contenedor_talla">
                    <p>Selecciona tu talla </p>
                    <div>
                        <% if(locals.talla) { %>
                            <% for (let i=0; i<talla.length;i++) { %>
                                <button class="item_talla"><%= talla[i].tallaDeLasTallas.Nombre %></button>
                            <% } %>
                        <% } %>
                        <button class="guia_talla">Guía de tallas</button>
                    </div>
                </div>

                <div class="contenedor_cantidad">
                    <p>Cantidad </p> 
                    <div class="input_cantidad">
                        <button>
                            <span class="material-icons">remove</span>
                        </button>
                        <input type="number" value="1" min="1" step="1" name="cantidad" id="">
                        <button>
                            <span class="material-icons">add</span>
                        </button>
                    </div>
                </div>
                <div class="contenedor_botones">
                    <button>Guía de tallas</button>
                    <button>Información del producto</button>
                </div>
                <button class="agregar_item">Agregar al carrito</button>
                <div class="contenedor_botonesEditar">
                    <% if (locals.logeado && logeado.logeado==true && logeado.role=="admin") { %>
                    <a href="/products/<%=producto.id%>/edit">Editar</a>
                    <form method="post" action="/products/<%=producto.id%>?_method=DELETE">
                        <button type="submit">Eliminar</button>
                    </form>
                    <% } %>
                    
                </div>
                <label for="mas_info">

                <div class="mas_detalles">
                    
                        <span class="material-icons">add</span>
                        <p>Información del producto</p>
                    
                </div>
            </label>
                <input type="checkbox" name="" id="mas_info" hidden>
                <div class="info_oculta">
                    <h3>Descripción </h3> 
                    <p>
                        <% if (producto.Descripcion) { %>
                            <%= producto.Descripcion %> 
                        <% } %>
                    </p>
                    <h3> Composición + Cuidados </h3>
                    <p>
                        <% if (producto.cuidados) { %>
                            <%= producto.cuidados %> 
                        <% } %>
                    </p>
                    
                </div>

            </div>
        </div>
        </div>
    </main>
    
    <!-- Footer -->
    <%- include('./partials/footer') %>
    
</body>
</html>